<div class="form-main block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-3xl font-bold text-center">Login</h1>

    <form action="/login" method="POST" class="mt-4">

        <input type="text" name="username" placeholder="Nombre de usuario" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
        <input type="number" name="dni" placeholder="dni" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
        <input type="number" name="numberQR" placeholder="qr" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
    
        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Enviar</button>
        {{#if error}}
            <p class="text-red-500 font-bold text-md my-3">{{error}}</p>
        {{/if}}
    </form>
</div>
<link rel="stylesheet" href="/css/login.css">